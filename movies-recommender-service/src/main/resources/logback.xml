<configuration>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.miejski.movies.recommender.configuration.ClassLoggingFilter"/>
        <!--<filter class="ch.qos.logback.core.filter.EvaluatorFilter">-->
        <!--<evaluator>-->
        <!--<matcher>-->
        <!--<Name>neo4j logging</Name>-->
        <!--&lt;!&ndash; filter out odd numbered statements &ndash;&gt;-->
        <!--<regex>http.request.HttpRequest</regex>-->
        <!--</matcher>-->
        <!--<expression>odd.matches(formattedMessage)</expression>-->
        <!--</evaluator>-->
        <!--<OnMismatch>NEUTRAL</OnMismatch>-->
        <!--<OnMatch>DENY</OnMatch>-->
        <!--</filter>-->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/logs/movies-recommender-service.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="!integration">
        <logger name="org.miejski.movies.recommender" level="WARN"/>

        <root level="WARN">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <springProfile name="integration">
        <logger name="org.miejski.movies.recommender" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <logger name="org.miejski.movies.recommender" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>

