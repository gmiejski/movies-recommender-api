    <springProfile name="!integration">
        <logger name="pl.allegro.profile.main" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <springProfile name="integration">
        <logger name="pl.allegro.profile.main" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <logger name="org.miejski.movies.recommender" level="debug"/>

    <root level="INFO">
